<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hp.attendamce_portal.Fragments.Table2">
    <TextView
        android:text="Subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="150dp"
        android:id="@+id/subjectid" />

    <TextView
        android:text="Present"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/ispresent"
        android:layout_alignBaseline="@+id/totallec"
        android:layout_alignBottom="@+id/totallec"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Total Lec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totallec"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/subjectid"
        android:layout_alignBottom="@+id/subjectid"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/totallec"
        android:id="@+id/recycler"
        android:layout_centerVertical="true" />



</RelativeLayout>
