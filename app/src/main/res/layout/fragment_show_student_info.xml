<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.example.hp.attendamce_portal.Fragments.ShowStudentInfo">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:text="Roll no :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="24dp"
            android:id="@+id/textView6" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="85dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Loading..."

            android:layout_marginEnd="85dp"
            android:id="@+id/rollno" />

        <TextView
            android:text="Name :"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginTop="38dp"
            android:id="@+id/textView8" />

        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Loading..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignLeft="@+id/rollno"
            android:layout_alignStart="@+id/rollno"
            android:id="@+id/name" />

        <TextView
            android:text="Date of Birth :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView8"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="35dp"
            android:id="@+id/textView10" />

        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Loading..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView10"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:id="@+id/dob" />

        <TextView
            android:text="Father's Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView10"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_marginTop="29dp"
            android:id="@+id/textView12" />

        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Loading..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView12"
            android:layout_alignLeft="@+id/dob"
            android:layout_alignStart="@+id/dob"
            android:id="@+id/fathername" />

        <TextView
            android:text="Mother's Name :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView12"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignStart="@+id/textView12"
            android:layout_marginTop="26dp"
            android:id="@+id/textView16" />

        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Loading..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView16"
            android:layout_alignLeft="@+id/fathername"
            android:layout_alignStart="@+id/fathername"
            android:id="@+id/mothername" />

        <TextView
            android:text="Branch Id :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView16"
            android:layout_alignLeft="@+id/textView16"
            android:layout_alignStart="@+id/textView16"
            android:layout_marginTop="26dp"
            android:id="@+id/textView18" />

        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Loading..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView18"
            android:layout_alignLeft="@+id/mothername"
            android:layout_alignStart="@+id/mothername"
            android:id="@+id/branchid" />

        <TextView
            android:text="Sem No :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView18"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_alignLeft="@+id/textView18"
            android:layout_alignStart="@+id/textView18"
            android:layout_marginTop="26dp"
            android:id="@+id/textView20" />

        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Loading..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView20"
            android:layout_alignLeft="@+id/branchid"
            android:layout_alignStart="@+id/branchid"
            android:id="@+id/semno" />
        <TextView
            android:text="Admission Date :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_alignLeft="@+id/textView20"
            android:layout_alignStart="@+id/textView20"
            android:layout_marginTop="26dp"
            android:id="@+id/textView22" />

        <TextView
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Loading..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView22"
            android:layout_alignLeft="@+id/semno"
            android:layout_alignStart="@+id/semno"
            android:id="@+id/joiningdate" />
        <TextView
            android:text="Subject :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@android:color/black"
            android:layout_alignTop="@+id/textView22"
            android:layout_alignLeft="@+id/textView22"
            android:layout_alignStart="@+id/textView22"
            android:layout_marginTop="72dp"
            android:id="@+id/textView"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/recycler"
            android:layout_below="@+id/joiningdate"
            android:layout_alignRight="@+id/joiningdate"
            android:layout_alignEnd="@+id/joiningdate"
            android:layout_marginRight="15dp"
            android:layout_marginTop="35dp" />


    </RelativeLayout>

   </ScrollView>